@using WebApplication3.Models;
@model GIAODICH
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Trade", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add a Trade</h4>
    <hr />
    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
    <div style="display:none" class="form-group">
        @Html.LabelFor(m => m.MaDinhDanh, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MaDinhDanh, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MaLK, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MaLK, new { @class = "form-control" })
            <span class="text-danger text-center"> @ViewBag.log</span>
        </div>
       @* <p class="warning text-center">@ViewBag.log</p>*@
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GiaCoSo, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.GiaCoSo, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GiaThucHien, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.GiaThucHien, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NgayGiaoDich, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NgayGiaoDich, new { @class = "form-control", @required = "required",@type = "datetime-local" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LoaiGiaoDich, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LoaiGiaoDich, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SoLuong, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SoLuong, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LoaiRepo, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
           @* @Html.TextBoxFor(m => m.LoaiRepo, new { @class = "form-control", @required = "required" })*@
            @*@Html.lis("", new SelectList(new SelectListItem { Value = "1", Text = "Mike"}),new { })*@
            @Html.DropDownList("LoaiRepo",new List<SelectListItem> { new SelectListItem {Value = "0",Text = "Ngược" }, new SelectListItem { Value = "1", Text = "Thuận" } },
                    new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MaTP, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MaTP, new { @class = "form-control", @required = "required" })
            <span class="text-danger text-center"> @ViewBag.logTP</span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MaDT, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MaDT, new { @class = "form-control", @required = "required" })
            <span class="text-danger text-center"> @ViewBag.logDT</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

